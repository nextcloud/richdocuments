<?xml version="1.0"?>
<info>
	<id>wopi</id>
	<name>Wopi</name>
	<summary>Edit office documents directly in your browser.</summary>
	<description>This application can connect to a Microsoft Office Online Server (or other) server (WOPI-like Client). Nextcloud is the WOPI Host. Application settings are in the Office Online section.</description>
	<version>3.4.9</version>
	<licence>agpl</licence>
	<author mail="info@roscomputing.com" homepage="https://roscomputing.com">RosComputing</author>
	<author>Collabora Productivity based on work of Frank Karlitschek, Victor Dubiniuk</author>
	<types>
		<filesystem/>
		<dav/>
		<prevent_group_restriction/>
	</types>
	<category>office</category>
	<category>integration</category>
    <website>https://roscomputing.com/</website>
	<bugs>https://github.com/roscomputing/richdocuments/issues</bugs>
	<repository type="git">https://github.com/roscomputing/richdocuments.git</repository>
	<dependencies>
		<nextcloud min-version="15" max-version="18" />
	</dependencies>
	<background-jobs>
		<job>OCA\Wopi\Backgroundjobs\ObtainCapabilities</job>
	</background-jobs>
	<commands>
		<command>OCA\Wopi\Command\UpdateEmptyTemplates</command>
	</commands>
	<settings>
		<admin>OCA\Wopi\Settings\Admin</admin>
		<admin-section>OCA\Wopi\Settings\Section</admin-section>
		<personal>OCA\Wopi\Settings\Personal</personal>
		<personal-section>OCA\Wopi\Settings\Section</personal-section>
	</settings>
	<repair-steps>
		<post-migration>
			<step>OCA\Wopi\Migration\OldConfigRepairStep</step>
		</post-migration>
	</repair-steps>
</info>
